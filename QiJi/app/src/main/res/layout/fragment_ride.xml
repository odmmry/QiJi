<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="骑行"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_gradient_green_light_normal"
                    android:padding="20dp">

                    <!--            <com.example.myapplication.view.GradientTextView-->
                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                android:text="Text with custom gradient 1"-->
                    <!--                app:startColor="#FF0000"-->
                    <!--                app:endColor="#0000FF"-->
                    <!--                app:gradientAngle="45"/>-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#46C346"
                        android:textStyle="bold"
                        android:text="标准骑行"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:textColor="#46C346"
                        android:text="按照自己的节奏享受休闲骑行"/>

                    <TextView
                        android:id="@+id/tvNavRide1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:background="@drawable/button_gradient_green"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text="选择模式"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_gradient_blue_light_normal"
                    android:padding="20dp">

                    <!--            <com.example.myapplication.view.GradientTextView-->
                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                android:text="Text with custom gradient 1"-->
                    <!--                app:startColor="#FF0000"-->
                    <!--                app:endColor="#0000FF"-->
                    <!--                app:gradientAngle="45"/>-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#4993EA"
                        android:textStyle="bold"
                        android:text="基于时间的骑行"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:textColor="#4993EA"
                        android:text="与时间赛跑，到达目的地"/>

                    <TextView
                        android:id="@+id/tvNavRide2"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:background="@drawable/button_gradient_blue"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text="选择模式"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_gradient_red_light_normal"
                    android:padding="20dp">

                    <!--            <com.example.myapplication.view.GradientTextView-->
                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                android:text="Text with custom gradient 1"-->
                    <!--                app:startColor="#FF0000"-->
                    <!--                app:endColor="#0000FF"-->
                    <!--                app:gradientAngle="45"/>-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#C6389C"
                        android:textStyle="bold"
                        android:text="基于距离的骑行"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:textColor="#C6389C"
                        android:text="用距离目标挑战自己"/>

                    <TextView
                        android:id="@+id/tvNavRide3"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:background="@drawable/button_gradient_red"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text="选择模式"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>